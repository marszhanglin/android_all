<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mars="http://schemas.android.com/apk/res/mars.all" >
 
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"  >
			
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <mars.all.activity.three.three.CircleProgressBarView
                mars:firstColor="#47D5F3"
                mars:secondColor="#D6D7DB"
                mars:circleWidth="5dp"
               	mars:speed="5"
               	android:layout_width="50dp"
               	android:layout_height="50dp"
               	android:background="#eeeeee"
                > 
            </mars.all.activity.three.three.CircleProgressBarView>
            
            <mars.all.activity.three.three.CircleProgressBarView
                mars:firstColor="#47D5F3"
                mars:secondColor="#D6D7DB"
                mars:circleWidth="5dp"
               	mars:speed="5"
               	android:layout_width="50dp"
               	android:layout_height="50dp"
               	android:background="#eeeeee"
                > 
            </mars.all.activity.three.three.CircleProgressBarView>
                
            </LinearLayout>
            
              
            
            <mars.all.activity.three.three.CircleVolumeView
                mars:firstColor4="#aa0000"
                mars:secondColor4="#00aa00"
                mars:circleWidth4="10dp" 
                mars:dotCount4="6"
                mars:splitSize4="20"
                mars:bg4="@drawable/ic_launcher" 
                android:layout_width="150dp"
               	android:layout_height="150dp"
                >  
                 </mars.all.activity.three.three.CircleVolumeView>
                 
            
            <mars.all.activity.three.three.CircleVolumeView
                mars:firstColor4="#252420"
                mars:secondColor4="#FDFDFD"
                mars:circleWidth4="12dp" 
                mars:dotCount4="20"
                mars:splitSize4="25"
                mars:bg4="@drawable/ic_launcher" 
                android:layout_width="200dp"
               	android:layout_height="200dp" 
                >  
                 </mars.all.activity.three.three.CircleVolumeView>
                 
            <mars.all.activity.three.three.CircleVolumeView
                mars:firstColor4="#ffffff"
                mars:secondColor4="#252420"
                mars:circleWidth4="12dp" 
                mars:dotCount4="30"
                mars:splitSize4="8"
                mars:bg4="@drawable/ic_launcher" 
                android:layout_width="200dp"
               	android:layout_height="200dp" 
               	android:background="@drawable/rectradius"
                >  
                 </mars.all.activity.three.three.CircleVolumeView>
            
            <Button 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="性能测试"
                android:onClick="btnclick" 
                android:background="@drawable/rectradius"
                />
        </LinearLayout>
    

</merge>

