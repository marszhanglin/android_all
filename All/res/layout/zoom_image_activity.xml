<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" 
    android:gravity="center_horizontal">
       <RelativeLayout  
  			android:layout_width="fill_parent"
  			android:layout_height="45dp"
  			android:background="@drawable/title_bar"
  			android:gravity="center_vertical"
  			 >   
  			 <Button
            android:id="@+id/site_picture_btn_back"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="返回"
            android:textSize="14sp"
            android:textColor="#fff" 
            android:background="@drawable/title_btn_back"
            android:onClick="fh"
		    />    
      		<TextView 
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:text="雨量等值面"
        		android:layout_centerInParent="true"
        		android:textSize="20sp"		
				android:textColor="#ffffff" />  
      		<Button
                android:id="@+id/contact_group_find"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/title_btn_right"
                android:onClick="main_code"
                android:text="主要CODE"
                android:textColor="#fff"
                android:textSize="12dp" />
				</RelativeLayout>
				<FrameLayout android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:layout_marginTop="45dp">
				    <mars.all.view.image.ZoomImageView
				        android:layout_width="fill_parent" 
				        android:layout_height="fill_parent" 
				        android:id="@+id/test1_picture"
				       android:src="@drawable/zoom_im" 
				       android:scaleType="matrix"
				        />
				    <TextView
				        android:id="@+id/demo6_time" 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="2014-12-05"
				        android:textColor="#000"/> 
				        <ImageView android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:src="@drawable/zoom_1"
				            android:layout_marginTop="30dp"
				            android:layout_marginLeft="10dp"/>
				        <ImageView android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:src="@drawable/zoom_2"
				            android:layout_marginTop="400dp"
				            android:layout_marginLeft="310dp"/> 
				</FrameLayout> 
</RelativeLayout>