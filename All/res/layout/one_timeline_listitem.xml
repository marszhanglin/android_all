<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    
     >
    
    <!-- 月份日期 -->
<RelativeLayout 
    android:id="@+id/one_timeline_listitem_layout_1"
    android:layout_width="60dp"
    android:layout_height="25dp"
    android:layout_marginLeft="25dp"
    android:background="@android:color/black"
    android:gravity="center"
    >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03/15"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:id="@+id/one_timeline_listitem_mouth"
        /> 
</RelativeLayout>

	<!-- 竖线 -->
<View 
    android:id="@+id/view_0"
    android:layout_width="1dp"
    android:layout_height="50dp"
    android:layout_below="@id/one_timeline_listitem_layout_1"
    android:layout_marginLeft="60dp"
    android:background="#A6A6A6"
    />
    
	<!-- 年份 -->
    <RelativeLayout 
    android:id="@+id/one_timeline_listitem_layout_2"
    android:layout_width="60dp"
    android:layout_height="25dp"
    android:layout_marginLeft="25dp"
    android:background="@android:color/black"
    android:gravity="center"
    android:layout_below="@id/view_0"
    >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2014"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:id="@+id/one_timeline_listitem_year"
        /> 
</RelativeLayout>

	<!-- 竖线 -->
    <View 
    android:id="@+id/view_1"
    android:layout_width="1dp"
    android:layout_height="50dp"
    android:layout_below="@id/one_timeline_listitem_layout_2"
    android:layout_marginLeft="60dp"
    android:background="#A6A6A6"
    />
    
    <!-- 日期 -->
    <TextView 
        android:id="@+id/show_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_1"
        android:layout_marginLeft="30dp"
        android:text="2014-12-12"
        android:textSize="12sp"
        />
    <!-- 圆点 -->
    <ImageView 
        android:id="@+id/point_image"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/view_1"
        android:layout_marginLeft="55dp"
        android:background="@drawable/ic_launcher"
        />
    
    <!-- 竖线 -->
    <View 
    android:id="@+id/view_2"
    android:layout_width="1dp"
    android:layout_height="100dp"
    android:layout_below="@id/point_image"
    android:layout_marginLeft="60dp"
    android:background="#A6A6A6"
    />
    
    <!-- 圆点右侧内容 -->
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/point_image"
        android:layout_below="@id/point_image" 
        android:padding="10dp"
        android:layout_marginTop="-20dp"
        android:id="@+id/one_timeline_listitem_content_layout"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="标题" 
            android:id="@+id/one_timeline_listitem_content_title"
            />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="内容内容内容内容内容内容内容内容内容内容内容" 
            android:id="@+id/one_timeline_listitem_content_content"
            android:layout_below="@id/one_timeline_listitem_content_title"
            />
        
    </RelativeLayout>
    
    
    
    
    
</RelativeLayout>
